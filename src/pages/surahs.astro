---
import Background from '../components/Background.tsx';
import SurahListContainer from '../components/SurahListContainer.tsx';
import '../styles/global.css'; // Importar estilos globales
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" /> {/* viewport-fit=cover for edge-to-edge */}
		<meta name="generator" content={Astro.generator} />
		<title>Surahs - Luminous Verses</title>
	</head>
	<body class="flex flex-col h-screen overflow-hidden"> {/* Restored overflow-hidden to lock page scroll */}
		<Background client:idle />
		<main class="relative z-10 flex flex-col items-center flex-1 p-4 h-full overflow-hidden" style="padding-top: env(safe-area-inset-top, 20px); padding-bottom: env(safe-area-inset-bottom, 0px);">
			<div class="w-full max-w-md absolute inset-x-0 top-[20px] bottom-[0px] mx-auto overflow-y-auto scrollbar-hide">
				<SurahListContainer client:only="preact" />
			</div>
		</main>
	</body>
</html>
